github:
  user: {{ ATLANTIS_GH_USER }}
  token: {{ ATLANTIS_GH_TOKEN }}
  secret: {{ ATLANTIS_WEBHOOK }}
  hostname: github.com

orgAllowlist: {{ ATLANTIS_ORG_ALLOW }}

ingress:
  enabled: true
  ingressClassName: nginx-external
  apiVersion: ""
  labels:
    app.kubernetes.io/instance: atlantis
    app.kubernetes.io/name: atlantis
  annotations:
    external-dns.alpha.kubernetes.io/hostname: {{ 'atlantis.' ~ dnsDomain }}
    meta.helm.sh/release-name: atlantis-ingress
    meta.helm.sh/release-namespace: default
    nginx.ingress.kubernetes.io/proxy-buffer-size: 256k
    nginx.ingress.kubernetes.io/proxy-buffering: 'on'
    nginx.ingress.kubernetes.io/proxy-buffers-number: '4'
    nginx.ingress.kubernetes.io/proxy-max-temp-file-size: 1024m
  path: /
  paths: []
  pathType: ImplementationSpecific
  host: {{ 'atlantis.' ~ dnsDomain }}
  hosts: []
  tls:
   - secretName: {{ tlsSecretName }}
     hosts:
       - {{ 'atlantis.' ~ dnsDomain }}

serviceAccount:
  create: true
  mount: true
  name: kops
  annotations:
    iam.amazonaws.com/role: "{{ iamPolicies['kops'] }}"
